@page
@model OrdersModel
@{
    ViewBag.Title = "Orders";
}

<h4>Unshipped Orders</h4>
@if (Model.UnshippedOrders.Count() > 0)
{
<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Zip</th>
        <th colspan="2">Details</th>
        <th></th>
    </tr>
    @foreach (Order o in Model.UnshippedOrders)
    {
        <tr>
            <td>@o.Name</td>
            <td>@o.Zip</td>
            <th>Product</th>
            <th>Quantity</th>
            <td>
                <form method="post">
                    <input type="hidden" name="OrderID" value="@o.OrderID" />
                    <button class="btn btn-sm btn-danger" type="submit">
                        Ship
                    </button>
                </form>
            </td>
        </tr>
        @foreach (CartLine line in o.Lines)
        {
            <tr>
                <td colspan="2"></td>
                <td>@line.Product.Name</td>
                <td>@line.Quantity</td>
                <td></td>
            </tr>
        }
    }  
</table>
}
else
{
<div class="text-center">No Unshipped Orders</div>
}
<h4>Shipped Orders</h4>
@if (Model.ShippedOrders.Count() > 0)
{
<table class="table table-bordered table-striped">
    <tr>
        <th>Name</th>
        <th>Zip</th>
        <th colspan="2">Details</th>
    </tr>
    @foreach (Order o in Model.ShippedOrders)
    {
        <tr>
            <td>@o.Name</td>
            <td>@o.Zip</td>
            <th>Product</th>
            <th>Quantity</th>
        </tr>
        @foreach (CartLine line in o.Lines)
        {
            <tr>
                <td colspan="2"></td>
                <td>@line.Product.Name</td>
                <td>@line.Quantity</td>
            </tr>
        }
    }    
</table>
}
else
{
<div class="text-center">No Shipped Orders</div>
}
<div class="text-center mt-2">
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Return to Home Page</a>
</div>

